    <modelVersion>4.0.0</modelVersion>

    <groupId>com.ocdsoft.bacta</groupId>
    <artifactId>soe</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>soe</name>
    <url>https://github.com/com.ocdsoft.bacta/soe</url>

    <issueManagement>
        <url>https://github.com/com.ocdsoft.bacta/soe/issues</url>
        <system>GitHub Issues</system>
    </issueManagement>

    <scm>
        <url>https://github.com/com.ocdsoft.bacta/soe</url>
        <connection>scm:git:git://github.com/com.ocdsoft.bacta/soe.git</connection>
        <developerConnection>scm:git:git@github.com:com.ocdsoft.bacta/soe.git</developerConnection>
